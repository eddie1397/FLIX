<%- include('./partials/header.ejs') %>

    <h1>New Page</h1>
    <hr>
    <form action="/movies/<%= movie._id%>?_method=PUT" method="POST">
      <fieldset>
        <label for="name">Name: </label>
        <input type="text" name="name" value="<%=movie.name%>">
      </fieldset>

      <fieldset>
        <label for="description">Description: </label>
        <textarea rows="8" cols="80" name="description"><%=movie.description%></textarea>
      </fieldset>

      <fieldset>
        <label for="img">Image: </label>
        <input type="img" name="img" value="<%=movie.img%>">
      </fieldset>

      <fieldset>
        <input type="submit" value='Edit Movie'>
      </fieldset>
    </form>


    <h3>Current Movie Image</h3>
    <img src="<%=movie.img%>" alt="<%=movie.name%>s Image">

    <hr>
    <br>
    <a href="/movies"><button type="button" name="button">Movies</button></a>
    <a href="/movies/reviews"><button type="button" name="button">Reviews</button></a>
    <a href="/movies/watch"><button type="button" name="button">What to Watch</button></a>


<%- include('./partials/footer.ejs') %>
