<%- include('./partials/header.ejs') %>


    <form action="/movies/<%= movie._id%>?_method=PUT" method="POST">
      <fieldset>
        <label for="name">Name: </label>
        <input class='white-text' type="text" name="name" value="<%=movie.name%>">
      </fieldset>

      <fieldset>
        <label for="description">Description: </label>
        <textarea class='white-text' rows="8" cols="80" name="description"><%=movie.description%></textarea>
      </fieldset>

      <fieldset>
        <label for="img">Image: </label>
        <input type="img" name="img" value="<%=movie.img%>">
      </fieldset>

      <fieldset>
        <input type="submit" value='Edit Movie'>
      </fieldset>
    </form>


    <h3 class='white-text'>Current Movie Image</h3>
    <img src="<%=movie.img%>" alt="<%=movie.name%>s Image">

<%- include('./partials/footer.ejs') %>
